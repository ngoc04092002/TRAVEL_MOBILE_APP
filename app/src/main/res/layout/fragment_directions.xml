<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightyellow"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Directions">

    <TextView
        android:id="@+id/titledirection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:text="CHỈ ĐƯỜNG"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backbtn2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ggmapsbtn"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:text="TÌM KIẾM TRÊN MAPS"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="30dp"
        app:cornerRadius="10dp"
        app:strokeColor="#000000"
        app:strokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titledirection" />

    <Button
        android:id="@+id/phonebtn"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/yellow"
        android:text="LIÊN LẠC VỚI BAN QUẢN LÝ"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="30dp"
        app:cornerRadius="10dp"
        app:strokeColor="#000000"
        app:strokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ggmapsbtn" />

    <Button
        android:id="@+id/taxibtn"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/yellow"
        android:text="GỌI TAXI NGAY"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="30dp"
        app:cornerRadius="10dp"
        app:strokeColor="#000000"
        app:strokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phonebtn" />


</androidx.constraintlayout.widget.ConstraintLayout>